<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guang16.lab.MainActivity">

    <TextView
        android:layout_width="53dp"
        android:layout_height="81dp"
        android:text="card_other_played"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.056"
        android:id="@+id/textView7" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="53dp"
        android:layout_height="81dp"
        android:text="card_you_play"
        app:layout_constraintLeft_toRightOf="@+id/textView7"
        android:layout_marginLeft="11dp"
        app:layout_constraintTop_toTopOf="@+id/textView7"
        android:layout_marginTop="-7dp" />

    <LinearLayout
        android:layout_width="401dp"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_marginLeft="-1dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView7"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:id="@+id/linearLayout4">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:text="card1" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:text="card2" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:text="card3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="156dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintLeft_toRightOf="@+id/linearLayout4"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
        android:id="@+id/linearLayout6">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.64"
            android:text="chat_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:orientation="horizontal"
            android:layout_weight="0.33">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="enter_text" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="chat" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="273dp"
        android:layout_height="139dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        app:layout_constraintRight_toLeftOf="@+id/linearLayout5"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        android:layout_marginTop="-7dp">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.99"
            android:text="math_war" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button3"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="enter" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="answer" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="154dp"
        android:layout_height="133dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:id="@+id/linearLayout5"
        app:layout_constraintLeft_toRightOf="@+id/linearLayout4"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/linearLayout6"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="card_remain" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="80dp"
                android:layout_height="115dp"
                android:background="@color/colorAccent"
                android:text="your_score" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_bright"
                android:text="other_score"
                android:textColorLink="@color/colorAccent" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>

