<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guang16.lab.MainActivity">

    <TextView
        android:layout_width="62dp"
        android:layout_height="99dp"
        android:text="card_other_played"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintVertical_bias="0.039"
        android:id="@+id/textView2"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="56dp"
        android:layout_height="101dp"
        android:text="card_you_play"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        android:layout_marginBottom="-2dp" />

    <LinearLayout
        android:layout_width="232dp"
        android:layout_height="103dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:id="@+id/linearLayout2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/linearLayout3"
        app:layout_constraintTop_toTopOf="@+id/textView"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.857">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="                   card_remain" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.22"
                android:background="@color/colorAccent"
                android:text="your_score" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:background="@android:color/holo_blue_bright"
                android:text="other_score" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="367dp"
        android:layout_height="196dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:id="@+id/linearLayout3"
        tools:layout_editor_absoluteX="9dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.62"
            android:text="math_war" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:orientation="horizontal"
            android:layout_weight="0.13">

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="enter" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="answer" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="77dp"
        android:layout_height="101dp"
        android:layout_marginRight="7dp"
        android:text="card1"
        app:layout_constraintRight_toLeftOf="@+id/textView5"
        android:layout_marginTop="42dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="0dp"
        android:text="card2"
        app:layout_constraintRight_toLeftOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="78dp"
        android:layout_height="100dp"
        android:layout_marginTop="0dp"
        android:text="card3"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        android:layout_marginRight="77dp"
        app:layout_constraintRight_toRightOf="@+id/linearLayout3" />

</android.support.constraint.ConstraintLayout>
